                        console.log("Language documents exist")
                        window.location.href = langUrl
                    } else {
                        alert('Language does not exist!')
                        console.log("Language document does not exist")
                        return;
                    }
                }
            }
            request.open('GET', langUrl, true);
            request.send()
    } else {
        alert("Language undefined. Please check language reference.")
    }
}

 

function isPageNotFound(responseText) {
    var isSoft404 = false
    var template = document.createElement('template');
    template.innerHTML = responseText
    var bannerTitle = template.getElementsByClassName('banner-title').innerHTML
    if (bannerTitle !== undefined && bannerTitle !== '' && bannerTitle !== null) {
        isSoft404 = bannerTitle.includes('Ooops... Page Not Found')
    }
    return isSoft404
}

function getBaseURL() {
    var base = ''
    var currentPath = document.location.pathname
    var p = currentPath.split('/')
    for (let i = 1; i < 3; i++) {
        base += '/' + p[i]
    }
    return base
}

